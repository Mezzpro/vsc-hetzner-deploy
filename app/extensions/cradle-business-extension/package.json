{
  "name": "cradle-business-extension",
  "displayName": "Cradle Business Suite",
  "description": "Professional business interface for Cradle Systems with clean white/black theme",
  "version": "1.0.0",
  "publisher": "cradle-systems",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cradle.dashboard",
        "title": "Business Dashboard",
        "category": "Cradle",
        "icon": "$(dashboard)"
      },
      {
        "command": "cradle.analytics", 
        "title": "Analytics Center",
        "category": "Cradle",
        "icon": "$(graph)"
      },
      {
        "command": "cradle.downloads",
        "title": "Download Center", 
        "category": "Cradle",
        "icon": "$(cloud-download)"
      },
      {
        "command": "cradle.tools",
        "title": "Business Tools",
        "category": "Cradle",
        "icon": "$(tools)"
      },
      {
        "command": "cradle.chatbot",
        "title": "Chat Assistant",
        "category": "Cradle",
        "icon": "$(comment)"
      },
      {
        "command": "cradle.workspace",
        "title": "Create Business Workspace",
        "category": "Cradle",
        "icon": "$(layout)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cradle-business-nav",
          "name": "Business Navigation",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cradle.dashboard",
        "key": "ctrl+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "cradle.analytics",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "cradle.chatbot",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}